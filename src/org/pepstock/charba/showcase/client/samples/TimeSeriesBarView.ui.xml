<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:c="urn:import:org.pepstock.charba.client">

	<g:HTMLPanel  width="100%">
	   <g:VerticalPanel width="100%" height="100%" >
			<g:cell width="90%" verticalAlignment="middle" horizontalAlignment="center">
				<c:BarChart ui:field="chart"/>
			</g:cell>
	   		<g:cell width="10%" verticalAlignment="top"  horizontalAlignment="center">
	   			<g:HorizontalPanel spacing="5">
		   			<g:Button ui:field="randomize">Randomize data</g:Button>
				</g:HorizontalPanel>
			</g:cell>
       </g:VerticalPanel>
	</g:HTMLPanel>
</ui:UiBinder> 