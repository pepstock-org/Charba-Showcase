<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:c="urn:import:org.pepstock.charba.client">

	<ui:with field="downButton"
		type="org.pepstock.charba.showcase.client.resources.Images" />
	<g:HTMLPanel width="100%">
		<g:VerticalPanel width="100%" height="100%">
			<g:cell width="90%" verticalAlignment="middle"
				horizontalAlignment="center">
				<c:LineChart ui:field="chart" />
			</g:cell>
			<g:cell width="90%" height="36px" verticalAlignment="middle"
				horizontalAlignment="center">
				<g:Label>Select a data range on chart below</g:Label>
			</g:cell>
			<g:cell width="90%" verticalAlignment="middle"
				horizontalAlignment="center">
				<c:LineChart ui:field="small" />
			</g:cell>
			<g:cell width="10%" verticalAlignment="top"
				horizontalAlignment="center">
				<g:HorizontalPanel spacing="5">
					<g:Button ui:field="randomize">Randomize data</g:Button>
					<g:Button ui:field="reset">Reset selection</g:Button>
				<g:PushButton ui:field='source' enabled='true'><g:upFace image='{downButton.github}' /></g:PushButton></g:HorizontalPanel>
			</g:cell>
		</g:VerticalPanel>
		<g:VerticalPanel ui:field="img" width="100%"
			height="100%">
		</g:VerticalPanel>
	</g:HTMLPanel>
</ui:UiBinder> 