<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:c="urn:import:org.pepstock.charba.client.jsinterop">

	<g:HTMLPanel  width="100%">
	   <g:VerticalPanel width="100%" height="100%" >
			<g:cell width="100%"  height="45%" verticalAlignment="middle" horizontalAlignment="center">
			 	<g:HorizontalPanel width="100%" height="100%" >
			 		<g:cell width="50%"  height="100%" verticalAlignment="middle" horizontalAlignment="center">
				      <c:LineChart ui:field="chartCircle"/>
				    </g:cell>
			 		<g:cell width="50%"  height="100%" verticalAlignment="middle" horizontalAlignment="center">
				      <c:LineChart ui:field="chartCross"/>
				    </g:cell>
				</g:HorizontalPanel>
			 </g:cell>
			<g:cell width="100%"  height="45%" verticalAlignment="middle" horizontalAlignment="center">
			 	<g:HorizontalPanel width="100%" height="100%" >
			 		<g:cell width="50%"  height="100%%" verticalAlignment="middle" horizontalAlignment="center">
				      <c:LineChart ui:field="chartCrossRot"/>
				    </g:cell>
			 		<g:cell width="50%"  height="100%" verticalAlignment="middle" horizontalAlignment="center">
				      <c:LineChart ui:field="chartDash"/>
				    </g:cell>
				</g:HorizontalPanel>
			</g:cell>
			<g:cell width="100%"  height="45%" verticalAlignment="middle" horizontalAlignment="center">
			 	<g:HorizontalPanel width="100%" height="100%" >
			 		<g:cell width="50%"  height="100%%" verticalAlignment="middle" horizontalAlignment="center">
				      <c:LineChart ui:field="chartLine"/>
				    </g:cell>
			 		<g:cell width="50%"  height="100%" verticalAlignment="middle" horizontalAlignment="center">
				      <c:LineChart ui:field="chartRect"/>
				    </g:cell>
				</g:HorizontalPanel>
			</g:cell>
			<g:cell width="100%"  height="45%" verticalAlignment="middle" horizontalAlignment="center">
			 	<g:HorizontalPanel width="100%" height="100%" >
			 		<g:cell width="50%"  height="100%%" verticalAlignment="middle" horizontalAlignment="center">
				      <c:LineChart ui:field="chartRectRounded"/>
				    </g:cell>
			 		<g:cell width="50%"  height="100%" verticalAlignment="middle" horizontalAlignment="center">
				      <c:LineChart ui:field="chartRectRot"/>
				    </g:cell>
				</g:HorizontalPanel>
			</g:cell>
			<g:cell width="100%"  height="45%" verticalAlignment="middle" horizontalAlignment="center">
			 	<g:HorizontalPanel width="100%" height="100%" >
			 		<g:cell width="50%"  height="100%%" verticalAlignment="middle" horizontalAlignment="center">
				      <c:LineChart ui:field="chartStar"/>
				    </g:cell>
			 		<g:cell width="50%"  height="100%" verticalAlignment="middle" horizontalAlignment="center">
				      <c:LineChart ui:field="chartTriangle"/>
				    </g:cell>
				</g:HorizontalPanel>
			</g:cell>

			<g:cell width="10%" verticalAlignment="top" horizontalAlignment="center">
	   			<g:HorizontalPanel spacing="5">
		   			<g:Button ui:field="randomize">Randomize data</g:Button>
				</g:HorizontalPanel>
			</g:cell>
			
       </g:VerticalPanel>
	</g:HTMLPanel>
</ui:UiBinder> 