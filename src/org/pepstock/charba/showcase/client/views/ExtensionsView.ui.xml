<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:c="urn:import:org.pepstock.charba.client"
	xmlns:s="urn:import:org.pepstock.charba.showcase.client.cases">

	<ui:style field="myStyle">
	.myTitleItem {
		font-size: 1rem;
		font-weight: 400;
		font-family: 'Lato', sans-serif;
		white-space: nowrap;
		padding-bottom: 12px;
	}
	
	.myTitleItem::before {
		content: 'Extensions ';
		color: #f27173;
		font-size: 1.5rem;
		font-weight: 400;
		font-family: 'Lato', sans-serif;
	}
	.myCategory{
		color: #aaa;
		font-weight: 300;
		font-size: 1.5rem;
		padding-bottom: 16px;
		padding-right: 48px;
	}
	.myLabel {
		cursor: pointer;
		color: #f27173;
		padding-bottom: 4px;
		font-size: 1.2rem;
		margin: 0.1rem;
	}
	</ui:style>

	<g:VerticalPanel width="100%" spacing="10">
  	    <g:Label styleName='{myStyle.myTitleItem}' horizontalAlignment="center"> of javascript CHART.JS plugins and their integration with CHARBA</g:Label>
		<g:HorizontalPanel width="100%" horizontalAlignment="center">
			<g:cell width="33%" verticalAlignment="top"	horizontalAlignment="center">
				<g:VerticalPanel horizontalAlignment="left">
					<g:Label styleName='{myStyle.myCategory}'>Datalabels</g:Label>
					<g:Label ui:field="datalabelsBar" styleName='{myStyle.myLabel}'>Bar</g:Label>
					<g:Label ui:field="datalabelsBubble" styleName='{myStyle.myLabel}'>Bubble</g:Label>
					<g:Label ui:field="datalabelsDoughnut" styleName='{myStyle.myLabel}'>Doughnut</g:Label>
					<g:Label ui:field="datalabelsLine" styleName='{myStyle.myLabel}'>Line</g:Label>
					<g:Label ui:field="datalabelsPolar"	styleName='{myStyle.myLabel}'>Polar</g:Label>
					<g:Label ui:field="datalabelsRadar" styleName='{myStyle.myLabel}'>Radar</g:Label>
					<g:Label ui:field="datalabelsGradient" styleName='{myStyle.myLabel}'>Gradient</g:Label>
					<g:Label ui:field="datalabelsInteractions" styleName='{myStyle.myLabel}'>Interactions</g:Label>
					<g:Label ui:field="datalabelsData" styleName='{myStyle.myLabel}'>Data</g:Label>
					<g:Label ui:field="datalabelsDataset" styleName='{myStyle.myLabel}'>Dataset</g:Label>
					<g:Label ui:field="datalabelsIndices" styleName='{myStyle.myLabel}'>Indices</g:Label>
					<g:Label ui:field="datalabelsMirror" styleName='{myStyle.myLabel}'>Mirror</g:Label>
					<g:Label ui:field="datalabelsListeners" styleName='{myStyle.myLabel}'>Listeners</g:Label>
					<g:Label ui:field="datalabelsHighlight" styleName='{myStyle.myLabel}'>Highlight</g:Label>
					<g:Label ui:field="datalabelsSelection" styleName='{myStyle.myLabel}'>Selection</g:Label>
					<g:Label ui:field="datalabelsCustom" styleName='{myStyle.myLabel}'>Custom labels</g:Label>
					<g:Label ui:field="datalabelsMulti" styleName='{myStyle.myLabel}'>Multi labels</g:Label>
				</g:VerticalPanel>
			</g:cell>
			<g:cell width="33%" verticalAlignment="top"	horizontalAlignment="center">
				<g:VerticalPanel horizontalAlignment="left">
					<g:Label styleName='{myStyle.myCategory}'>Labels</g:Label>
					<g:Label ui:field="piecelabelPieLabels" styleName='{myStyle.myLabel}'>Labels </g:Label>
					<g:Label ui:field="piecelabelPiePercentage" styleName='{myStyle.myLabel}'>Percentage</g:Label>
					<g:Label ui:field="piecelabelPieValue" styleName='{myStyle.myLabel}'>Value</g:Label>
					<g:Label ui:field="piecelabelPiePosition" styleName='{myStyle.myLabel}'>Position</g:Label>
					<g:Label ui:field="piecelabelPieImages" styleName='{myStyle.myLabel}'>Images</g:Label>
					<g:Label ui:field="piecelabelPieMulti" styleName='{myStyle.myLabel}'>Multi-options</g:Label>
					<g:Label ui:field="piecelabelPolar" styleName='{myStyle.myLabel}'>Polar</g:Label>
					<g:Label ui:field="piecelabelBar" styleName='{myStyle.myLabel}'>Bar</g:Label>
				</g:VerticalPanel>
			</g:cell>
			<g:cell width="33%" verticalAlignment="top"	horizontalAlignment="center">
				<g:VerticalPanel horizontalAlignment="left">
					<g:Label styleName='{myStyle.myCategory}'>Importing JS plugin</g:Label>
					<g:Label ui:field="importPlugin" styleName='{myStyle.myLabel}'>Annotation</g:Label>
				</g:VerticalPanel>
			</g:cell>
		</g:HorizontalPanel>
	</g:VerticalPanel>
</ui:UiBinder> 