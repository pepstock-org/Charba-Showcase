<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:c="urn:import:org.pepstock.charba.client"
	xmlns:s="urn:import:org.pepstock.charba.showcase.client.cases">

	<ui:style field="myStyle">
	.myTitleItem {
		font-size: 1rem;
		font-weight: 400;
		font-family: 'Lato', sans-serif;
		white-space: nowrap;
		padding-bottom: 12px;
	}
	
	.myTitleItem::before {
		content: 'Extensions ';
		color: #f27173;
		font-size: 1.5rem;
		font-weight: 400;
		font-family: 'Lato', sans-serif;
	}
	.myCategory{
		color: #aaa;
		font-weight: 300;
		font-size: 1.5rem;
		padding-bottom: 16px;
		padding-right: 48px;
	}
	.myLabel {
		cursor: pointer;
		color: #f27173;
		padding-bottom: 4px;
		font-size: 1.2rem;
		margin: 0.1rem;
	}
	</ui:style>

	<g:VerticalPanel width="100%" spacing="10">
  	    <g:Label styleName='{myStyle.myTitleItem}' horizontalAlignment="center"> of javascript CHART.JS plugins and their integration with CHARBA</g:Label>
		<g:HorizontalPanel width="100%" horizontalAlignment="center">
			<g:cell width="33%" verticalAlignment="top"	horizontalAlignment="center">
				<g:VerticalPanel horizontalAlignment="left">
					<g:Label styleName='{myStyle.myCategory}'>Datalabels</g:Label>
					<g:Label ui:field="datalabelsBar" styleName='{myStyle.myLabel}'>Using bar chart</g:Label>
					<g:Label ui:field="datalabelsBubble" styleName='{myStyle.myLabel}'>Using bubble chart</g:Label>
					<g:Label ui:field="datalabelsDoughnut" styleName='{myStyle.myLabel}'>Using doughnut chart</g:Label>
					<g:Label ui:field="datalabelsLine" styleName='{myStyle.myLabel}'>Using line chart</g:Label>
					<g:Label ui:field="datalabelsPolar"	styleName='{myStyle.myLabel}'>Using polar chart</g:Label>
					<g:Label ui:field="datalabelsRadar" styleName='{myStyle.myLabel}'>Using radar chart</g:Label>
					<g:Label ui:field="datalabelsGradient" styleName='{myStyle.myLabel}'>Labels and gradient</g:Label>
					<g:Label ui:field="datalabelsInteractions" styleName='{myStyle.myLabel}'>Interactions among labels</g:Label>
					<g:Label ui:field="datalabelsData" styleName='{myStyle.myLabel}'>Using data on labels</g:Label>
					<g:Label ui:field="datalabelsDataset" styleName='{myStyle.myLabel}'>Joinind datasets</g:Label>
					<g:Label ui:field="datalabelsIndices" styleName='{myStyle.myLabel}'>Indices on datasets</g:Label>
					<g:Label ui:field="datalabelsMirror" styleName='{myStyle.myLabel}'>Mirror on labels on bar chart</g:Label>
					<g:Label ui:field="datalabelsListeners" styleName='{myStyle.myLabel}'>Listening event on labels</g:Label>
					<g:Label ui:field="datalabelsHighlight" styleName='{myStyle.myLabel}'>Highlighting labels</g:Label>
					<g:Label ui:field="datalabelsSelection" styleName='{myStyle.myLabel}'>Selecting labels</g:Label>
					<g:Label ui:field="datalabelsCustom" styleName='{myStyle.myLabel}'>Customizing labels on bar chart</g:Label>
					<g:Label ui:field="datalabelsMulti" styleName='{myStyle.myLabel}'>Multiple labels options on pie chart</g:Label>
				</g:VerticalPanel>
			</g:cell>
			<g:cell width="33%" verticalAlignment="top"	horizontalAlignment="center">
				<g:VerticalPanel horizontalAlignment="left">
					<g:Label styleName='{myStyle.myCategory}'>Labels</g:Label>
					<g:Label ui:field="labelsOnBar" styleName='{myStyle.myLabel}'>Using bar chart</g:Label>
					<g:Label ui:field="labelsOnPolar" styleName='{myStyle.myLabel}'>Using on polar chart</g:Label>
					<g:Label ui:field="labelsPieUsingLabels" styleName='{myStyle.myLabel}'>Using labels as render</g:Label>
					<g:Label ui:field="labelsPieUsingPercentage" styleName='{myStyle.myLabel}'>Using percentage as render</g:Label>
					<g:Label ui:field="labelsPieUsingValue" styleName='{myStyle.myLabel}'>Using value as render</g:Label>
					<g:Label ui:field="labelsPieUsingImages" styleName='{myStyle.myLabel}'>Using images as render</g:Label>
					<g:Label ui:field="labelsPiePosition" styleName='{myStyle.myLabel}'>Positioning</g:Label>
					<g:Label ui:field="labelsPieMulti" styleName='{myStyle.myLabel}'>Multiple labels options</g:Label>
				</g:VerticalPanel>
			</g:cell>
			<g:cell width="33%" verticalAlignment="top"	horizontalAlignment="center">
				<g:VerticalPanel horizontalAlignment="left">
					<g:Label styleName='{myStyle.myCategory}'>Importing JS plugin</g:Label>
					<g:Label ui:field="importPlugin" styleName='{myStyle.myLabel}'>Annotation</g:Label>
				</g:VerticalPanel>
			</g:cell>
		</g:HorizontalPanel>
	</g:VerticalPanel>
</ui:UiBinder> 