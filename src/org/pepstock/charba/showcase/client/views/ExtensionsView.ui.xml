<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:c="urn:import:org.pepstock.charba.client"
	xmlns:s="urn:import:org.pepstock.charba.showcase.client.cases">

	<ui:style field="myStyle">
	.myTitleItem {
		font-size: 1rem;
		font-weight: 400;
		font-family: 'Lato', sans-serif;
		white-space: nowrap;
		padding-bottom: 12px;
	}
	
	.myTitleItem::before {
		content: 'Extensions ';
		color: #f27173;
		font-size: 1.5rem;
		font-weight: 400;
		font-family: 'Lato', sans-serif;
	}
	.myCategory{
		color: #aaa;
		font-weight: 300;
		font-size: 1.5rem;
		padding-bottom: 16px;
		padding-right: 48px;
	}
	.myLabel {
		cursor: pointer;
		color: #f27173;
		padding-bottom: 4px;
		font-size: 1.2rem;
		margin: 0.1rem;
	}
	</ui:style>

	<g:VerticalPanel width="100%" spacing="10">
  	    <g:Label styleName='{myStyle.myTitleItem}' horizontalAlignment="center"> of javascript CHART.JS plugins and their integration with CHARBA</g:Label>
		<g:HorizontalPanel width="100%" horizontalAlignment="center">
			<g:cell width="25%" verticalAlignment="top"	horizontalAlignment="center">
				<g:VerticalPanel horizontalAlignment="left">
					<g:Label styleName='{myStyle.myCategory}'>Datalabels plugin</g:Label>
					<g:Label ui:field="datalabelsBar" styleName='{myStyle.myLabel}'>Using on bar chart</g:Label>
					<g:Label ui:field="datalabelsBubble" styleName='{myStyle.myLabel}'>Using on bubble chart</g:Label>
					<g:Label ui:field="datalabelsDoughnut" styleName='{myStyle.myLabel}'>Using on doughnut chart</g:Label>
					<g:Label ui:field="datalabelsLine" styleName='{myStyle.myLabel}'>Using on line chart</g:Label>
					<g:Label ui:field="datalabelsPolar"	styleName='{myStyle.myLabel}'>Using on polar chart</g:Label>
					<g:Label ui:field="datalabelsRadar" styleName='{myStyle.myLabel}'>Using on radar chart</g:Label>
					<g:Label ui:field="datalabelsGradient" styleName='{myStyle.myLabel}'>Applying labels on dataset with gradient</g:Label>
					<g:Label ui:field="datalabelsInteractions" styleName='{myStyle.myLabel}'>Interactions among labels on line datasets</g:Label>
					<g:Label ui:field="datalabelsData" styleName='{myStyle.myLabel}'>Managing data among on labels on line dataset</g:Label>
					<g:Label ui:field="datalabelsDataset" styleName='{myStyle.myLabel}'>Joining line datasets</g:Label>
					<g:Label ui:field="datalabelsIndices" styleName='{myStyle.myLabel}'>Indexes and values on line datasets</g:Label>
					<g:Label ui:field="datalabelsMirror" styleName='{myStyle.myLabel}'>Mirroring labels on bar chart</g:Label>
					<g:Label ui:field="datalabelsListeners" styleName='{myStyle.myLabel}'>Listening events</g:Label>
					<g:Label ui:field="datalabelsHighlight" styleName='{myStyle.myLabel}'>Highlighting hovered labels</g:Label>
					<g:Label ui:field="datalabelsSelection" styleName='{myStyle.myLabel}'>Selecting data by labels</g:Label>
					<g:Label ui:field="datalabelsCustom" styleName='{myStyle.myLabel}'>Customizing dataset labels on bar chart</g:Label>
					<g:Label ui:field="datalabelsMulti" styleName='{myStyle.myLabel}'>Multiple options on pie chart</g:Label>
				</g:VerticalPanel>
			</g:cell>
			<g:cell width="25%" verticalAlignment="top"	horizontalAlignment="center">
				<g:VerticalPanel horizontalAlignment="left">
					<g:Label styleName='{myStyle.myCategory}'>Labels plugin</g:Label>
					<g:Label ui:field="labelsOnBar" styleName='{myStyle.myLabel}'>Using on bar chart</g:Label>
					<g:Label ui:field="labelsOnPolar" styleName='{myStyle.myLabel}'>Using on polar chart</g:Label>
					<g:Label ui:field="labelsPieUsingLabels" styleName='{myStyle.myLabel}'>Using dataset labels</g:Label>
					<g:Label ui:field="labelsPieUsingPercentage" styleName='{myStyle.myLabel}'>Using percentage values</g:Label>
					<g:Label ui:field="labelsPieUsingValue" styleName='{myStyle.myLabel}'>Using data values</g:Label>
					<g:Label ui:field="labelsPieUsingImages" styleName='{myStyle.myLabel}'>Using images</g:Label>
					<g:Label ui:field="labelsPiePosition" styleName='{myStyle.myLabel}'>Positioning</g:Label>
					<g:Label ui:field="labelsPieMulti" styleName='{myStyle.myLabel}'>Multiple labels rendering options</g:Label>
				</g:VerticalPanel>
			</g:cell>
			<g:cell width="25%" verticalAlignment="top"	horizontalAlignment="center">
				<g:VerticalPanel horizontalAlignment="left">
					<g:Label styleName='{myStyle.myCategory}'>Zoom plugin</g:Label>
					<g:Label ui:field="zoomPanOnBar" styleName='{myStyle.myLabel}'>Panning on bar chart</g:Label>
					<g:Label ui:field="zoomZoomOnBar" styleName='{myStyle.myLabel}'>Zooming on bar chart</g:Label>
					<g:Label ui:field="zoomXZoomOnBar" styleName='{myStyle.myLabel}'>Zooming by X direction on bar chart</g:Label>
					<g:Label ui:field="zoomZoomOnHorizontalBar" styleName='{myStyle.myLabel}'>Zooming on horizontal bar chart</g:Label>
					<g:Label ui:field="zoomZoomOnTimeseriesLine" styleName='{myStyle.myLabel}'>Zooming on timeseries line chart</g:Label>
					<g:Label ui:field="zoomZoomOnScatter" styleName='{myStyle.myLabel}'>Zooming on scatter chart</g:Label>
					<g:Label ui:field="zoomStyledZoomOnBar" styleName='{myStyle.myLabel}'>Styling zooming on bar chart</g:Label>
					<g:Label ui:field="zoomZoomCallbacksOnTimeseriesLine" styleName='{myStyle.myLabel}'>Zoom callbacks on timeseries line chart</g:Label>
					<g:Label ui:field="zoomModeCallbackOnBar" styleName='{myStyle.myLabel}'>Mode direction callback on bar chart</g:Label>
				</g:VerticalPanel>
			</g:cell>
			<g:cell width="25%" verticalAlignment="top"	horizontalAlignment="center">
				<g:VerticalPanel horizontalAlignment="left">
					<g:Label styleName='{myStyle.myCategory}'>Annotation plugin</g:Label>
					<g:Label ui:field="annotationsLineAndBoxOnCombined" styleName='{myStyle.myLabel}'>Applying line and box on combined chart</g:Label>
					<g:Label ui:field="annotationLineOnTimeseries" styleName='{myStyle.myLabel}'>Line annotation on timeseries chart</g:Label>
					<g:Label ui:field="annotationLineOnHorizontalBar" styleName='{myStyle.myLabel}'>Line annotation on horizontal bar chart</g:Label>
					<g:Label ui:field="annotationObliqueLineOnTimeseries" styleName='{myStyle.myLabel}'>Oblique line annotation on timeseries chart</g:Label>
					<g:Label ui:field="annotationsEventsOnTimeseries" styleName='{myStyle.myLabel}'>Catching annotations events</g:Label>
					<g:Label styleName='{myStyle.myCategory}'></g:Label>
					<g:Label styleName='{myStyle.myCategory}'>Importing Chart.JS plugin</g:Label>
					<g:Label ui:field="importingChartJsPlugin" styleName='{myStyle.myLabel}'>Using Stacked100 plugin</g:Label>
				</g:VerticalPanel>
			</g:cell>
		</g:HorizontalPanel>
	</g:VerticalPanel>
</ui:UiBinder> 