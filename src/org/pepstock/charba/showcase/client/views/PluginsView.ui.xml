<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:c="urn:import:org.pepstock.charba.client"
	xmlns:s="urn:import:org.pepstock.charba.showcase.client.cases">

	<ui:style field="myStyle">
	.myTitleItem {
		font-size: 1rem;
		font-family: 'Lato', sans-serif;
		white-space: nowrap;
		padding-left: 12px;
		padding-bottom: 12px;
	}
	
	.myTitleItem::before {
		content: 'Plugins ';
		color: #f27173;
		font-size: 1.5rem;
		font-weight: 600;
		font-family: 'Lato', sans-serif;
	}
	
	.myCategory {
		color: #aaa;
		font-weight: 300;
		font-size: 1.5rem;
		padding-bottom: 16px;
		padding-right: 48px;
	}
	
	.myLabel {
		cursor: pointer;
		color: #f27173;
		padding-bottom: 6px;
		font-size: 1.2rem;
		margin: 0.1rem;
	}
	</ui:style>

	<g:VerticalPanel width="100%" spacing="10">
		<g:Label styleName='{myStyle.myTitleItem}'
			horizontalAlignment="center"> category</g:Label>
		<g:HorizontalPanel width="100%"
			horizontalAlignment="center">
			<g:cell width="20%" verticalAlignment="top"
				horizontalAlignment="center">
				<g:VerticalPanel horizontalAlignment="left">
					<g:Label styleName='{myStyle.myCategory}'>Chart background</g:Label>
					<g:Label ui:field="bgcolorplugin"
						styleName='{myStyle.myLabel}'>Background color</g:Label>
					<g:Label ui:field="piebgcolorplugin"
						styleName='{myStyle.myLabel}'>Background gradient</g:Label>
				</g:VerticalPanel>
			</g:cell>
			<g:cell width="20%" verticalAlignment="top"
				horizontalAlignment="center">
				<g:VerticalPanel horizontalAlignment="left">
					<g:Label styleName='{myStyle.myCategory}'>Dataset item selector</g:Label>
					<g:Label ui:field="zooming" styleName='{myStyle.myLabel}'>Zooming</g:Label>
					<g:Label ui:field="drilldown" styleName='{myStyle.myLabel}'>Drill down</g:Label>
				</g:VerticalPanel>
			</g:cell>
			<g:cell width="20%" verticalAlignment="top"
				horizontalAlignment="center">
				<g:VerticalPanel horizontalAlignment="left">
					<g:Label styleName='{myStyle.myCategory}'>Color schemes</g:Label>
					<g:Label ui:field="barScheme" styleName='{myStyle.myLabel}'>Color Scheme (bar) </g:Label>
					<g:Label ui:field="pieScheme" styleName='{myStyle.myLabel}'>Color Scheme (pie) </g:Label>
					<g:Label ui:field="bubbleScheme" styleName='{myStyle.myLabel}'>Color Scheme (bubble) </g:Label>
				</g:VerticalPanel>
			</g:cell>
			<g:cell width="20%" verticalAlignment="top"
				horizontalAlignment="center">
				<g:VerticalPanel horizontalAlignment="left">
					<g:Label styleName='{myStyle.myCategory}'>HTML legend</g:Label>
					<g:Label ui:field="htmlLegendBarPlugin" styleName='{myStyle.myLabel}'>HTML legend builder ()bar)</g:Label>
				</g:VerticalPanel>
			</g:cell>
			<g:cell width="20%" verticalAlignment="top"
				horizontalAlignment="center">
				<g:VerticalPanel horizontalAlignment="left">
					<g:Label styleName='{myStyle.myCategory}'>Chart pointer</g:Label>
				</g:VerticalPanel>
			</g:cell>
		</g:HorizontalPanel>
	</g:VerticalPanel>
</ui:UiBinder> 