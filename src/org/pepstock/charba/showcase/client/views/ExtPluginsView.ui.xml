					<g:Label ui:field="importingChartJsCrosshairPlugin" styleName='{myStyle.myLabel}'>Using Crosshair plugin</g:Label>
				</g:VerticalPanel>
			</g:cell>
			<g:cell width="25%" verticalAlignment="top"	horizontalAlignment="center">
				<g:VerticalPanel horizontalAlignment="left">
