<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:c="urn:import:org.pepstock.charba.client.gwt.widgets"
	xmlns:s="urn:import:org.pepstock.charba.showcase.client.cases">

	<ui:style field="myStyle">
	.myTitleItem {
		font-size: 1rem;
		font-weight: 400;
		font-family: 'Lato', sans-serif;
		white-space: nowrap;
		padding-bottom: 12px;
	}
	.myTitleItem::before {
		content: 'Miscellaneous ';
		color: #f27173;
		font-size: 1.5rem;
		font-weight: 400;
		font-family: 'Lato', sans-serif;
	}
	.myCategory{
		color: #aaa;
		font-weight: 300;
		font-size: 1.5rem;
		padding-bottom: 16px;
		padding-right: 48px;
	}
	.myLabel {
		cursor: pointer;
		color: #f27173;
		padding-bottom: 6px;
		font-size: 1.2rem;
		margin: 0.1rem;
	}
	</ui:style>

	<g:VerticalPanel width="100%" spacing="10">
  	    <g:Label styleName='{myStyle.myTitleItem}' horizontalAlignment="center"> configuration and implementation items</g:Label>
		<g:HorizontalPanel width="100%" horizontalAlignment="center">
			<g:cell width="25%" verticalAlignment="top"	horizontalAlignment="center">
				<g:VerticalPanel horizontalAlignment="left">
					<g:Label styleName='{myStyle.myCategory}'>Options</g:Label>
					<g:Label ui:field="animation" styleName='{myStyle.myLabel}'>Animation events</g:Label>
					<g:Label ui:field="miscellaneousSteppedOnLine" styleName='{myStyle.myLabel}'>Stepped line options on line chart</g:Label>
					<g:Label ui:field="miscellaneousInterpolationOnLine" styleName='{myStyle.myLabel}'>Interpolation options on line chart</g:Label>
					<g:Label ui:field="miscellaneousStylesOnLine" styleName='{myStyle.myLabel}'>Applying styles on line chart</g:Label>
					<g:Label ui:field="miscellaneousPointStylesOnLine" styleName='{myStyle.myLabel}'>Applying point styles on line chart</g:Label>
					<g:Label ui:field="miscellaneousPointStyleImagesOnLine" styleName='{myStyle.myLabel}'>Applying point styles as images on line chart</g:Label>
					<g:Label ui:field="miscellaneousPointSizeOnLine" styleName='{myStyle.myLabel}'>Applying point sizes on line chart</g:Label>
					<g:Label ui:field="miscellaneousHoverStyleOnStackedArea" styleName='{myStyle.myLabel}'>Applying hover styles on stacked area chart</g:Label>
					<g:Label ui:field="miscellaneousTrendAndForecasetOnTimeseries" styleName='{myStyle.myLabel}'>Drawing trend and forecast on timeseries chart</g:Label>
					<g:Label ui:field="miscellaneousAutoUpdateLine" styleName='{myStyle.myLabel}'>Auto updating on timeseries chart</g:Label>
				</g:VerticalPanel>
			</g:cell>
			<g:cell width="25%" verticalAlignment="top"	horizontalAlignment="center">
				<g:VerticalPanel horizontalAlignment="left">
					<g:Label styleName='{myStyle.myCategory}'>Scriptable options</g:Label>
					<g:Label ui:field="callbacksOnBar"	styleName='{myStyle.myLabel}'>Callbacks on bar dataset</g:Label>
					<g:Label ui:field="callbacksOnLine"	styleName='{myStyle.myLabel}'>Callbacks on line dataset</g:Label>
					<g:Label ui:field="callbacksOnRadar"	styleName='{myStyle.myLabel}'>Callbacks on radar dataset</g:Label>
					<g:Label ui:field="callbacksOnDoughnut"	styleName='{myStyle.myLabel}'>Callbacks on doughnut dataset</g:Label>
					<g:Label ui:field="callbacksOnPie"	styleName='{myStyle.myLabel}'>Callbacks on pie dataset</g:Label>
					<g:Label ui:field="callbacksOnPolar"	styleName='{myStyle.myLabel}'>Callbacks on polar area dataset</g:Label>
					<g:Label ui:field="callbacksOnBubble"	styleName='{myStyle.myLabel}'>Callbacks on bubble dataset</g:Label>
					<g:Label ui:field="callbacksWithThresholdOnBar"	styleName='{myStyle.myLabel}'>Callbacks with threshold on bar dataset</g:Label>
				</g:VerticalPanel>
			</g:cell>
			<g:cell width="25%" verticalAlignment="top"	horizontalAlignment="center">
				<g:VerticalPanel horizontalAlignment="left">
					<g:Label styleName='{myStyle.myCategory}'>Datasets</g:Label>
					<g:Label ui:field="miscellaneousFloatingDataOnBar" styleName='{myStyle.myLabel}'>Floating data on bar chart</g:Label>
					<g:Label ui:field="miscellaneousFloatingDataOnHorizontalBar" styleName='{myStyle.myLabel}'>Floating data on horizontal bar chart</g:Label>
					<g:Label ui:field="miscellaneousFloatingDataOnStackedBar" styleName='{myStyle.myLabel}'>Floating data on stacked bar chart</g:Label>
					<g:Label ui:field="miscellaneousFloatingDataTimeseriesOnBar" styleName='{myStyle.myLabel}'>Floating data on timeseries by bar chart</g:Label>
					<g:Label ui:field="miscellaneousFloatingDataOnBarAndDatalabels" styleName='{myStyle.myLabel}'>Floating data on bar chart and datalabels extension</g:Label>
				</g:VerticalPanel>
			</g:cell>
			<g:cell width="25%" verticalAlignment="top"
				horizontalAlignment="center">
				<g:VerticalPanel horizontalAlignment="left">
					<g:Label styleName='{myStyle.myCategory}'>Implementing plugins</g:Label>
					<g:Label ui:field="miscellaneousSimplePluginLabelOnBar" styleName='{myStyle.myLabel}'>Simple dataset labels</g:Label>
					<g:Label ui:field="miscellaneousPluginFlags" styleName='{myStyle.myLabel}'>Flags as ticks</g:Label>
					<g:Label ui:field="miscellaneousPluginStandings" styleName='{myStyle.myLabel}'>Standings chart</g:Label>
					<g:Label ui:field="htmlAnnotation" styleName='{myStyle.myLabel}'>HTML annotation as ticks</g:Label>
					<g:Label ui:field="htmlAnnotationByElement" styleName='{myStyle.myLabel}'>HTML annotation by element</g:Label>
					<g:Label styleName='{myStyle.myCategory}'></g:Label>
					<g:Label styleName='{myStyle.myCategory}'>Implementing controllers</g:Label>
					<g:Label ui:field="controllerMyLine" styleName='{myStyle.myLabel}'>My simple line chart</g:Label>
					<g:Label ui:field="controllerMyHorizontalBar" styleName='{myStyle.myLabel}'>My horizontal bar chart with flags</g:Label>
				</g:VerticalPanel>
			</g:cell>			
		</g:HorizontalPanel>
	</g:VerticalPanel>
</ui:UiBinder> 