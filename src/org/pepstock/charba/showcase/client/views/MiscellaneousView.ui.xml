<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:c="urn:import:org.pepstock.charba.client"
	xmlns:s="urn:import:org.pepstock.charba.showcase.client.cases">

	<ui:style field="myStyle">
	.myTitleItem {
		font-size: 1rem;
		font-weight: 400;
		font-family: 'Lato', sans-serif;
		white-space: nowrap;
		padding-bottom: 12px;
	}
	.myTitleItem::before {
		content: 'Miscellaneous ';
		color: #f27173;
		font-size: 1.5rem;
		font-weight: 400;
		font-family: 'Lato', sans-serif;
	}
	.myCategory{
		color: #aaa;
		font-weight: 300;
		font-size: 1.5rem;
		padding-bottom: 16px;
		padding-right: 48px;
	}
	.myLabel {
		cursor: pointer;
		color: #f27173;
		padding-bottom: 6px;
		font-size: 1.2rem;
		margin: 0.1rem;
	}
	</ui:style>

	<g:VerticalPanel width="100%" spacing="10">
  	    <g:Label styleName='{myStyle.myTitleItem}' horizontalAlignment="center"> configuration and implementation items</g:Label>
		<g:HorizontalPanel width="100%" horizontalAlignment="center">
			<g:cell width="25%" verticalAlignment="top"	horizontalAlignment="center">
				<g:VerticalPanel horizontalAlignment="left">
					<g:Label styleName='{myStyle.myCategory}'>Options</g:Label>
					<g:Label ui:field="animation" styleName='{myStyle.myLabel}'>Animation events</g:Label>
					<g:Label ui:field="miscellaneousSteppedOnLine" styleName='{myStyle.myLabel}'>Stepped on line chart</g:Label>
					<g:Label ui:field="miscellaneousInterpolationOnLine" styleName='{myStyle.myLabel}'>Interpolation on line chart</g:Label>
					<g:Label ui:field="miscellaneousStylesOnLine" styleName='{myStyle.myLabel}'>Line styles on line chart</g:Label>
					<g:Label ui:field="miscellaneousPointStylesOnLine" styleName='{myStyle.myLabel}'>Point styles on line chart</g:Label>
					<g:Label ui:field="miscellaneousPointStyleImagesOnLine" styleName='{myStyle.myLabel}'>Point styles images on line chart</g:Label>
					<g:Label ui:field="miscellaneousPointSizeOnLine" styleName='{myStyle.myLabel}'>Point Size on line chart</g:Label>
				</g:VerticalPanel>
			</g:cell>
			<g:cell width="25%" verticalAlignment="top"	horizontalAlignment="center">
				<g:VerticalPanel horizontalAlignment="left">
					<g:Label styleName='{myStyle.myCategory}'>Scriptable options</g:Label>
					<g:Label ui:field="barCallback"	styleName='{myStyle.myLabel}'>Callback on bar chart</g:Label>
					<g:Label ui:field="lineCallback" styleName='{myStyle.myLabel}'>Callback on line chart</g:Label>
				</g:VerticalPanel>
			</g:cell>
			<g:cell width="25%" verticalAlignment="top"	horizontalAlignment="center">
				<g:VerticalPanel horizontalAlignment="left">
					<g:Label styleName='{myStyle.myCategory}'>Plugins</g:Label>
					<g:Label ui:field="miscellaneousPluginLabel" styleName='{myStyle.myLabel}'>Simple dataset labels</g:Label>
					<g:Label ui:field="miscellaneousPluginFlags" styleName='{myStyle.myLabel}'>Flags as ticks</g:Label>
					<g:Label ui:field="miscellaneousPluginStandings" styleName='{myStyle.myLabel}'>Standings chart</g:Label>
					<g:Label ui:field="htmlAnnotation" styleName='{myStyle.myLabel}'>HTML annotation as ticks</g:Label>
					<g:Label ui:field="htmlAnnotationByElement" styleName='{myStyle.myLabel}'>HTML annotation by element</g:Label>
				</g:VerticalPanel>
			</g:cell>
			<g:cell width="25%" verticalAlignment="top"
				horizontalAlignment="center">
				<g:VerticalPanel horizontalAlignment="left">
					<g:Label styleName='{myStyle.myCategory}'>Controllers</g:Label>
					<g:Label ui:field="myLine" styleName='{myStyle.myLabel}'>My line</g:Label>
					<g:Label ui:field="myHorizontalBar"
						styleName='{myStyle.myLabel}'>My horizontal bar</g:Label>
				</g:VerticalPanel>
			</g:cell>			
		</g:HorizontalPanel>
	</g:VerticalPanel>
</ui:UiBinder> 