<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:s="urn:import:org.pepstock.charba.showcase.client.resources">

	<ui:style field="internalStyle">
	.myTitle {
		cursor: pointer;
		font-size: 1rem;
		font-weight: 600;
		font-family: 'Lato', sans-serif;
		white-space: nowrap;
		padding-left: 12px;
		padding-bottom: 12px;
	}
	.myTitle::before {
		content: 'Charba ';
		color: #f27173;
		font-size: 2rem;
		font-weight: 600;
		font-family: 'Lato', sans-serif;
	}
	.myItem {
		border-width: 3px;
		border-style: dashed;
		border-color: rgba(0,0,0,0);
		padding-left: 12px;
  		height: 64px;
	}
	.myImgItem {
		cursor: pointer;
	}
	.myLabelItem {
		padding-left: 12px;
		cursor: pointer;
		white-space: nowrap;
		font-size: 1.5rem;
		font-family: 'Lato', sans-serif;
	}
	</ui:style>

	<g:HTMLPanel>
	<g:HorizontalPanel width="100%" height="100%">
		<g:cell width="250px" height="100%" verticalAlignment="top"
				horizontalAlignment="left">
		<g:VerticalPanel width="250px">
	        <g:Label ui:field="title" styleName='{internalStyle.myTitle}' horizontalAlignment="center"> showcase</g:Label>
	     	<g:HorizontalPanel styleName="{internalStyle.myItem}" width="100%">
	     		<g:cell width="36px" verticalAlignment="middle" horizontalAlignment="left">
		     		<g:Image ui:field="imgCharts" styleName="{internalStyle.myImgItem}" url="icons/showcaseCharts.png"></g:Image>
	     		</g:cell>
	     		<g:cell verticalAlignment="middle" horizontalAlignment="left">
		     		<g:Label ui:field="labelCharts" styleName="{internalStyle.myLabelItem}">Charts</g:Label>
	     		</g:cell>
	     	</g:HorizontalPanel>
	     	<g:HorizontalPanel styleName="{internalStyle.myItem}" width="100%" verticalAlignment="middle">
	     		<g:cell width="36px" verticalAlignment="middle" horizontalAlignment="left">
		     		<g:Image ui:field="imgElements" styleName="{internalStyle.myImgItem}" url="icons/showcaseElements.png"></g:Image>
	     		</g:cell>
	     		<g:cell verticalAlignment="middle" horizontalAlignment="left">
	 	    		<g:Label ui:field="labelElements" styleName="{internalStyle.myLabelItem}">Elements</g:Label>
	     		</g:cell>
	     	</g:HorizontalPanel>
	     	<g:HorizontalPanel styleName="{internalStyle.myItem}" width="100%" verticalAlignment="middle" horizontalAlignment="left">
	     		<g:cell width="36px" verticalAlignment="middle" horizontalAlignment="left">
		     		<g:Image ui:field="imgPlugins" styleName="{internalStyle.myImgItem}" url="icons/showcasePlugins.png" width="36px" height="36px"></g:Image>
	     		</g:cell>
	     		<g:cell verticalAlignment="middle" horizontalAlignment="left">
			     	<g:Label ui:field="labelPlugins" styleName="{internalStyle.myLabelItem}">Plugins</g:Label>
	     		</g:cell>
	     	</g:HorizontalPanel>
	     	<g:HorizontalPanel styleName="{internalStyle.myItem}" width="100%" verticalAlignment="middle" horizontalAlignment="left">
	     		<g:cell width="36px" verticalAlignment="middle" horizontalAlignment="left">
	    	 		<g:Image ui:field="imgColoring" styleName="{internalStyle.myImgItem}" url="icons/showcaseColoring.png"></g:Image>
	      		</g:cell>
	     		<g:cell verticalAlignment="middle" horizontalAlignment="left">
	 	    		<g:Label ui:field="labelColoring" styleName="{internalStyle.myLabelItem}">Coloring</g:Label>
	     		</g:cell>
	     	</g:HorizontalPanel>
	     	<g:HorizontalPanel styleName="{internalStyle.myItem}" width="100%" verticalAlignment="middle" horizontalAlignment="left">
	     		<g:cell width="36px" verticalAlignment="middle" horizontalAlignment="left">
		     		<g:Image ui:field="imgExtPlugins" styleName="{internalStyle.myImgItem}" url="icons/showcaseExtPlugins.png"></g:Image>
	      		</g:cell>
	     		<g:cell verticalAlignment="middle" horizontalAlignment="left">
			     	<g:Label ui:field="labelExtPlugins" styleName="{internalStyle.myLabelItem}">Ext. plugins</g:Label>
	     		</g:cell>
	     	</g:HorizontalPanel>
	     	<g:HorizontalPanel styleName="{internalStyle.myItem}" width="100%" verticalAlignment="middle" horizontalAlignment="left">
	     		<g:cell width="36px" verticalAlignment="middle" horizontalAlignment="left">
		     		<g:Image ui:field="imgExtCharts" styleName="{internalStyle.myImgItem}" url="icons/showcaseExtCharts.png"></g:Image>
	      		</g:cell>
	     		<g:cell verticalAlignment="middle" horizontalAlignment="left">
			     	<g:Label ui:field="labelExtCharts" styleName="{internalStyle.myLabelItem}">Ext. charts</g:Label>
	     		</g:cell>
	     	</g:HorizontalPanel>
	     	<g:HorizontalPanel styleName="{internalStyle.myItem}" width="100%" verticalAlignment="middle" horizontalAlignment="left">
	     		<g:cell width="36px" verticalAlignment="middle" horizontalAlignment="left">
		     		<g:Image ui:field="imgMiscellaneous" styleName="{internalStyle.myImgItem}" url="icons/showcaseMiscellaneous.png"></g:Image>
	      		</g:cell>
	     		<g:cell verticalAlignment="middle" horizontalAlignment="left">
			     	<g:Label ui:field="labelMiscellaneous" styleName="{internalStyle.myLabelItem}">Miscellaneous</g:Label>
	     		</g:cell>
	     	</g:HorizontalPanel>
		</g:VerticalPanel>
		</g:cell>
		<g:cell width="90%" height="100%" verticalAlignment="top">
			<g:VerticalPanel width="100%" ui:field="content" />
		</g:cell>
	</g:HorizontalPanel>
	</g:HTMLPanel>
</ui:UiBinder> 