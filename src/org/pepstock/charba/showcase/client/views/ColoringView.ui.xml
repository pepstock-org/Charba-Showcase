<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:c="urn:import:org.pepstock.charba.client"
	xmlns:s="urn:import:org.pepstock.charba.showcase.client.cases">

	<ui:style field="myStyle">
	.myTitleItem {
		cursor: pointer;
		font-size: 1rem;
		font-weight: 600;
		font-family: 'Lato', sans-serif;
		white-space: nowrap;
		padding-left: 12px;
		padding-bottom: 12px;
	}
	
	.myTitleItem::before {
		content: 'Coloring ';
		color: #f27173;
		font-size: 1.5rem;
		font-weight: 600;
		font-family: 'Lato', sans-serif;
	}
	
	.myCategory {
		color: #aaa;
		font-weight: 300;
		font-size: 1.5rem;
		padding-bottom: 16px;
		padding-right: 48px;
	}
	
	.myLabel {
		cursor: pointer;
		color: #f27173;
		padding-bottom: 4px;
		font-size: 1.2rem;
		margin: 0.1rem;
	}
	</ui:style>

	<g:VerticalPanel width="100%" spacing="10">
		<g:Label styleName='{myStyle.myTitleItem}'
			horizontalAlignment="center"> category</g:Label>
		<g:HorizontalPanel width="100%"
			horizontalAlignment="center">
			<g:cell width="25%" verticalAlignment="top"
				horizontalAlignment="center">
				<g:VerticalPanel horizontalAlignment="left">
					<g:Label styleName='{myStyle.myCategory}'>Patterns</g:Label>
					<g:Label ui:field="coloringPatternOnBar" styleName='{myStyle.myLabel}'>Pattern on bar chart</g:Label>
					<g:Label ui:field="coloringPatternOnLine" styleName='{myStyle.myLabel}'>Pattern on line chart</g:Label>
				</g:VerticalPanel>
			</g:cell>
			<g:cell width="25%" verticalAlignment="top"
				horizontalAlignment="center">
				<g:VerticalPanel horizontalAlignment="left">
					<g:Label styleName='{myStyle.myCategory}'>Gradients</g:Label>
					<g:Label ui:field="coloringLinearGradientOnBar" styleName='{myStyle.myLabel}'>Linear gradient on bar chart</g:Label>
					<g:Label ui:field="coloringLinearGradientOnLine" styleName='{myStyle.myLabel}'>Linear gradient on line chart</g:Label>
					<g:Label ui:field="coloringRadialGradientOnPie" styleName='{myStyle.myLabel}'>Radial gradient on pie chart</g:Label>
				</g:VerticalPanel>
			</g:cell>
			<g:cell width="25%" verticalAlignment="top"
				horizontalAlignment="center">
				<g:VerticalPanel horizontalAlignment="left">
					<g:Label styleName='{myStyle.myCategory}'>Tiles</g:Label>
					<g:Label ui:field="coloringTilesOnBar" styleName='{myStyle.myLabel}'>Bar </g:Label>
					<g:Label ui:field="coloringTilesOnDoughnut" styleName='{myStyle.myLabel}'>Doughnut</g:Label>
				</g:VerticalPanel>
			</g:cell>
			<g:cell width="25%" verticalAlignment="top"
				horizontalAlignment="center">
				<g:VerticalPanel horizontalAlignment="left">
					<g:Label styleName='{myStyle.myCategory}'>GWT Material</g:Label>
					<g:Label ui:field="coloringGwtMaterial" styleName='{myStyle.myLabel}'>GWT Material</g:Label>
				</g:VerticalPanel>
			</g:cell>
		</g:HorizontalPanel>
	</g:VerticalPanel>
</ui:UiBinder> 