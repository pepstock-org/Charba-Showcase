<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:c="urn:import:org.pepstock.charba.client"
	xmlns:s="urn:import:org.pepstock.charba.showcase.client.cases">

	<ui:style field="myStyle">
	.myTitleItem {
		font-size: 1rem;
		font-weight: 400;
		font-family: 'Lato', sans-serif;
		white-space: nowrap;
		padding-bottom: 12px;
	}
	
	.myTitleItem::before {
		content: 'Coloring ';
		color: #f27173;
		font-size: 1.5rem;
		font-weight: 400;
		font-family: 'Lato', sans-serif;
	}
	
	.myCategory {
		color: #aaa;
		font-weight: 300;
		font-size: 1.5rem;
		padding-bottom: 16px;
		padding-right: 48px;
	}
	
	.myLabel {
		cursor: pointer;
		color: #f27173;
		padding-bottom: 4px;
		font-size: 1.2rem;
		margin: 0.1rem;
	}
	</ui:style>

	<g:VerticalPanel width="100%" spacing="10">
		<g:Label styleName='{myStyle.myTitleItem}'
			horizontalAlignment="center"> section to have a look how the chart can use patterns, gradient and colors</g:Label>
		<g:HorizontalPanel width="100%"
			horizontalAlignment="center">
			<g:cell width="25%" verticalAlignment="top"
				horizontalAlignment="center">
				<g:VerticalPanel horizontalAlignment="left">
					<g:Label styleName='{myStyle.myCategory}'>Patterns</g:Label>
					<g:Label ui:field="coloringPatternOnBar" styleName='{myStyle.myLabel}'>Pattern on bar dataset</g:Label>
					<g:Label ui:field="coloringPatternOnLine" styleName='{myStyle.myLabel}'>Pattern on line dataset</g:Label>
					<g:Label ui:field="coloringPatternOnRadar" styleName='{myStyle.myLabel}'>Pattern on radar dataset</g:Label>
					<g:Label ui:field="coloringPatternOnPolar" styleName='{myStyle.myLabel}'>Pattern on polar area dataset</g:Label>
					<g:Label ui:field="coloringPatternOnBubble" styleName='{myStyle.myLabel}'>Pattern on bubble dataset</g:Label>
				</g:VerticalPanel>
			</g:cell>
			<g:cell width="25%" verticalAlignment="top"
				horizontalAlignment="center">
				<g:VerticalPanel horizontalAlignment="left">
					<g:Label styleName='{myStyle.myCategory}'>Gradients</g:Label>
					<g:Label ui:field="coloringLinearGradientOnBar" styleName='{myStyle.myLabel}'>Linear gradient on bar dataset</g:Label>
					<g:Label ui:field="coloringLinearGradientOnLine" styleName='{myStyle.myLabel}'>Linear gradient on line dataset</g:Label>
					<g:Label ui:field="coloringRadialGradientOnRadar" styleName='{myStyle.myLabel}'>Radial gradient on radar dataset</g:Label>
					<g:Label ui:field="coloringRadialGradientOnPolar" styleName='{myStyle.myLabel}'>Radial gradient on polar area dataset</g:Label>
					<g:Label ui:field="coloringRadialGradientOnPie" styleName='{myStyle.myLabel}'>Radial gradient on pie dataset</g:Label>
				</g:VerticalPanel>
			</g:cell>
			<g:cell width="25%" verticalAlignment="top"
				horizontalAlignment="center">
				<g:VerticalPanel horizontalAlignment="left">
					<g:Label styleName='{myStyle.myCategory}'>Tiles</g:Label>
					<g:Label ui:field="coloringTilesOnBar" styleName='{myStyle.myLabel}'>Applying on bar dataset</g:Label>
					<g:Label ui:field="coloringTilesOnLine" styleName='{myStyle.myLabel}'>Applying on line dataset</g:Label>
					<g:Label ui:field="coloringTilesOnRadar" styleName='{myStyle.myLabel}'>Applying on radar dataset</g:Label>
					<g:Label ui:field="coloringTilesOnPolar" styleName='{myStyle.myLabel}'>Applying on polar area dataset</g:Label>
					<g:Label ui:field="coloringTilesOnDoughnut" styleName='{myStyle.myLabel}'>Applying on doughnut dataset</g:Label>
					<g:Label ui:field="coloringTilesByImageShapes" styleName='{myStyle.myLabel}'>Using image shapes</g:Label>
					<g:Label ui:field="coloringTilesByCharShapes" styleName='{myStyle.myLabel}'>Using character shapes</g:Label>
					<g:Label ui:field="coloringTilesByPointStyleShapes" styleName='{myStyle.myLabel}'>Using point styles shapes</g:Label>
				</g:VerticalPanel>
			</g:cell>
			<g:cell width="25%" verticalAlignment="top"
				horizontalAlignment="center">
				<g:VerticalPanel horizontalAlignment="left">
					<g:Label styleName='{myStyle.myCategory}'>Filling</g:Label>
					<g:Label ui:field="fillingBoundaries" styleName='{myStyle.myLabel}'>Setting filling boundaries</g:Label>
					<g:Label ui:field="fillingDatasetsOnLine" styleName='{myStyle.myLabel}'>Setting filling on line chart</g:Label>
					<g:Label ui:field="fillingDatasetsOnRadar" styleName='{myStyle.myLabel}'>Setting filling on radar chart</g:Label>
					<g:Label styleName='{myStyle.myCategory}'></g:Label>
					<g:Label styleName='{myStyle.myCategory}'>Palette</g:Label>
					<g:Label ui:field="coloringGwtMaterial" styleName='{myStyle.myLabel}'>GWT Material</g:Label>
					<g:Label ui:field="coloringUiGradients" styleName='{myStyle.myLabel}'>UI Gradients</g:Label>
				</g:VerticalPanel>
			</g:cell>
		</g:HorizontalPanel>
	</g:VerticalPanel>
</ui:UiBinder> 