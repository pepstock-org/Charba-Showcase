<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:s="urn:import:org.pepstock.charba.showcase.client.cases">

	<ui:style field="myStyle">
	.myTitleItem {
		font-size: 1rem;
		font-weight: 400;
		font-family: 'Lato', sans-serif;
		white-space: nowrap;
		padding-bottom: 12px;
	}
	
	.myTitleItem::before {
		content: 'Charts extensions ';
		color: #f27173;
		font-size: 1.5rem;
		font-weight: 400;
		font-family: 'Lato', sans-serif;
	}
	.myCategory{
		color: #aaa;
		font-weight: 300;
		font-size: 1.5rem;
		padding-bottom: 16px;
		padding-right: 48px;
	}
	.myLabel {
		cursor: pointer;
		color: #f27173;
		padding-bottom: 4px;
		font-size: 1.2rem;
		margin: 0.1rem;
	}
	</ui:style>

	<g:VerticalPanel width="100%" spacing="10">
  	    <g:Label styleName='{myStyle.myTitleItem}' horizontalAlignment="center"> of javascript CHART.JS controllers and their integration with CHARBA</g:Label>
		<g:HorizontalPanel width="100%" horizontalAlignment="center">
			<g:cell width="25%" verticalAlignment="top"	horizontalAlignment="center">
				<g:VerticalPanel horizontalAlignment="left">
					<g:Label styleName='{myStyle.myCategory}'>Geographical controller</g:Label>
					<g:Label ui:field="choroplethLog" styleName='{myStyle.myLabel}'>Choropleth with logarithmic axis</g:Label>
					<g:Label ui:field="bubblemapLog" styleName='{myStyle.myLabel}'>Bubble map with logarithmic axis</g:Label>
					<g:Label ui:field="choroplethInterpolation" styleName='{myStyle.myLabel}'>Interpolations</g:Label>
					<g:Label ui:field="choroplethCustomInterpolation" styleName='{myStyle.myLabel}'>Custom interpolation</g:Label>
					<g:Label ui:field="choroplethClick" styleName='{myStyle.myLabel}'>Select country from map</g:Label>
					<g:Label ui:field="bubblemapDataLabels" styleName='{myStyle.myLabel}'>Using Datalabels on map</g:Label>
					<g:Label ui:field="choroplethCapitals" styleName='{myStyle.myLabel}'>Adds capitals to the choropleth chart</g:Label>
				</g:VerticalPanel>
			</g:cell>
			<g:cell width="25%" verticalAlignment="top"	horizontalAlignment="center">
				<g:VerticalPanel horizontalAlignment="left">
					<g:Label styleName='{myStyle.myCategory}'>TreeMap controller</g:Label>
					<g:Label ui:field="treemapUSpopulation" styleName='{myStyle.myLabel}'>Groups</g:Label>
					<g:Label ui:field="treemapTreeObject" styleName='{myStyle.myLabel}'>Object tree</g:Label>
					<g:Label ui:field="treemapGrouping" styleName='{myStyle.myLabel}'>Grouping data at runtime</g:Label>
					<g:Label ui:field="treemapDividers" styleName='{myStyle.myLabel}'>Applying dividers</g:Label>
					<g:Label ui:field="treemapFontsColors" styleName='{myStyle.myLabel}'>Fonts and colors</g:Label>
					<g:Label ui:field="treemapClick" styleName='{myStyle.myLabel}'>Selecting treemap item</g:Label>
					<g:Label ui:field="treemapDatalabels" styleName='{myStyle.myLabel}'>Using Datalabels plugin</g:Label>
				</g:VerticalPanel>
			</g:cell>
			<g:cell width="25%" verticalAlignment="top"	horizontalAlignment="center">
				<g:VerticalPanel horizontalAlignment="left">
					<g:Label styleName='{myStyle.myCategory}'>Matrix controller</g:Label>
					<g:Label ui:field="matrixCalendar" styleName='{myStyle.myLabel}'>Calendar</g:Label>
					<g:Label ui:field="matrixOnTimeAxis" styleName='{myStyle.myLabel}'>Using time axis</g:Label>
					<g:Label ui:field="matrixOnCategoryAxis" styleName='{myStyle.myLabel}'>Using category axis</g:Label>
					<g:Label ui:field="matrixClick" styleName='{myStyle.myLabel}'>Selecting matrix item</g:Label>
					<g:Label ui:field="matrixDatalabels" styleName='{myStyle.myLabel}'>Using Datalabels plugin</g:Label>
					<g:Label styleName='{myStyle.myCategory}'></g:Label>
				</g:VerticalPanel>
			</g:cell>
			<g:cell width="25%" verticalAlignment="top"	horizontalAlignment="center">
				<g:VerticalPanel horizontalAlignment="left">
					<g:Label styleName='{myStyle.myCategory}'></g:Label>
					<g:Label styleName='{myStyle.myCategory}'>Sankey controller</g:Label>
					<g:Label ui:field="sankeyBasic" styleName='{myStyle.myLabel}'>Basic</g:Label>
					<g:Label ui:field="sankeyEnergy" styleName='{myStyle.myLabel}'>Energy</g:Label>
					<g:Label ui:field="sankeyCountries" styleName='{myStyle.myLabel}'>Countries</g:Label>
					<g:Label ui:field="sankeyTree" styleName='{myStyle.myLabel}'>Tree</g:Label>
					<g:Label ui:field="sankeyClick" styleName='{myStyle.myLabel}'>Selecting flow item</g:Label>
					<g:Label ui:field="sankeyColumns" styleName='{myStyle.myLabel}'>Setting columns</g:Label>
				</g:VerticalPanel>
			</g:cell>
		</g:HorizontalPanel>
	</g:VerticalPanel>
</ui:UiBinder> 