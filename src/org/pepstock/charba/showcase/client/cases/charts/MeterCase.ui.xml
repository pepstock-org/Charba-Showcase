<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:c="urn:import:org.pepstock.charba.client.gwt.widgets">

	<ui:with field="downButton"
		type="org.pepstock.charba.showcase.client.resources.Images" />
	<g:HTMLPanel width="100%">
		<g:VerticalPanel width="100%">
			<g:cell width="100%" verticalAlignment="middle"
				horizontalAlignment="center">
				<g:HorizontalPanel width="90%" spacing="10">
					<g:cell width="50%" verticalAlignment="middle"
						horizontalAlignment="center">
						<c:MeterChartWidget ui:field="chartPercent" width="500px"
							height="300px" />
					</g:cell>
					<g:cell width="50%" verticalAlignment="middle"
						horizontalAlignment="center">
						<c:MeterChartWidget ui:field="chartValue" width="500px"
							height="300px" />
					</g:cell>
				</g:HorizontalPanel>
			</g:cell>
			<g:cell width="100%" verticalAlignment="middle"
				horizontalAlignment="center">	
				<g:HorizontalPanel width="90%" spacing="10">
					<g:cell width="50%" verticalAlignment="middle"
						horizontalAlignment="center">
						<c:MeterChartWidget ui:field="chartValueColor"
							width="500px" height="300px" />
					</g:cell>
					<g:cell width="50%" verticalAlignment="middle"
						horizontalAlignment="center">
						<g:Label></g:Label>
					</g:cell>
				</g:HorizontalPanel>

			</g:cell>
			<g:cell width="10%" verticalAlignment="top"
				horizontalAlignment="center">
				<g:HorizontalPanel spacing="5" verticalAlignment="middle">
					<g:Button ui:field="randomize">Randomize data</g:Button>
					<g:PushButton ui:field='source' enabled='true'>
						<g:upFace image='{downButton.github}' />
					</g:PushButton>
				</g:HorizontalPanel>
			</g:cell>
		</g:VerticalPanel>
	</g:HTMLPanel>
</ui:UiBinder> 