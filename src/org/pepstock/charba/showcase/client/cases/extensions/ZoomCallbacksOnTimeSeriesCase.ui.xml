<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:c="urn:import:org.pepstock.charba.client.gwt.widgets"
	xmlns:s="urn:import:org.pepstock.charba.showcase.client.cases.commons">

	<ui:with field="downButton"
		type="org.pepstock.charba.showcase.client.resources.Images" />
		
	<g:HTMLPanel width="100%">
		<g:VerticalPanel width="100%" height="80%">
			<g:cell width="10%" verticalAlignment="middle"
				horizontalAlignment="center">
				<c:TimeSeriesLineChartWidget ui:field="chart" />
			</g:cell>
			<g:cell width="10%" verticalAlignment="top"
				horizontalAlignment="center">
				<g:HorizontalPanel spacing="5" verticalAlignment="middle">
					<g:Button ui:field="randomize">Randomize data</g:Button>
					<g:Button ui:field="reset">Reset zoom</g:Button>
					<g:CheckBox ui:field="dragging" checked="true">Dragging</g:CheckBox>
					<g:CheckBox ui:field="modifier" checked="false" enabled="false">CTRL modifier</g:CheckBox>
					<g:PushButton ui:field='source' enabled='true'>
						<g:upFace image='{downButton.github}' />
					</g:PushButton>
				</g:HorizontalPanel>
			</g:cell>
			<g:cell width="10%" verticalAlignment="top"
				horizontalAlignment="center">
				<g:HorizontalPanel spacing="5" verticalAlignment="middle">
					<g:HTMLPanel ui:field="help" visible="false"></g:HTMLPanel>
				</g:HorizontalPanel>
			</g:cell>
			<g:cell width="10%" verticalAlignment="top"
				horizontalAlignment="center">
				<s:LogView ui:field="mylog" width="40%" height="100%"/>
			</g:cell>
		</g:VerticalPanel>
	</g:HTMLPanel>
</ui:UiBinder> 