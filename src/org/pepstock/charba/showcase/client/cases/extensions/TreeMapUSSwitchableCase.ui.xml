<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:c="urn:import:org.pepstock.charba.client.gwt.widgets">

	<ui:with field="myImages"
		type="org.pepstock.charba.showcase.client.resources.Images" />
	<g:HTMLPanel width="100%">
		<g:VerticalPanel width="100%" height="100%">
			<g:cell width="90%" verticalAlignment="middle"
				horizontalAlignment="center">
				<c:TreeMapChartWidget height="600px" ui:field="chart" />
			</g:cell>
			<g:cell width="10%" verticalAlignment="top"
				horizontalAlignment="center">
				<g:HorizontalPanel spacing="5" verticalAlignment="middle">
					<g:Label>Metric:</g:Label>
					<g:ListBox ui:field="metric"/>
					<g:CheckBox ui:field="region">Region</g:CheckBox>
					<g:CheckBox ui:field="division">Division</g:CheckBox>
					<g:CheckBox ui:field="state">State</g:CheckBox>
					<g:CheckBox ui:field="rtl">Right-to-left</g:CheckBox>
					<g:PushButton ui:field='source' enabled='true'>
						<g:upFace image='{myImages.github}' />
					</g:PushButton>
				</g:HorizontalPanel>
			</g:cell>
		</g:VerticalPanel>
	</g:HTMLPanel>
</ui:UiBinder> 