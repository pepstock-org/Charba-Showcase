<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:c="urn:import:org.pepstock.charba.client.gwt.widgets">

	<ui:with field="myImages"
		type="org.pepstock.charba.showcase.client.resources.Images" />
	<g:HTMLPanel width="100%">
		<g:VerticalPanel width="100%" height="100%">
			<g:cell height="90%" width="100%" verticalAlignment="middle"
				horizontalAlignment="center">
				<c:HorizontalBarChartWidget ui:field="chart" />
			</g:cell>
			<g:cell height="10%" width="100%" verticalAlignment="top"
				horizontalAlignment="center">
				<g:HorizontalPanel spacing="5" verticalAlignment="middle">
					<g:PushButton ui:field='source' enabled='true'>
						<g:upFace image='{myImages.github}' />
					</g:PushButton>
				</g:HorizontalPanel>
			</g:cell>
		</g:VerticalPanel>
	</g:HTMLPanel>
</ui:UiBinder> 